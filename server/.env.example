# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/university_marketplace

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
SESSION_SECRET=your_session_secret_key_change_this_in_production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# For production, use: https://your-backend-url.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
# For production, use: https://your-frontend-url.com
FRONTEND_URL=http://localhost:8080

# Firebase Configuration (Optional - for production)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:8080

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
